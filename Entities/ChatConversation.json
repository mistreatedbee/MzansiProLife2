{
  "name": "ChatConversation",
  "type": "object",
  "properties": {
    "session_id": {
      "type": "string"
    },
    "messages": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "role": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "timestamp": {
            "type": "string"
          }
        }
      }
    },
    "user_name": {
      "type": "string"
    },
    "user_email": {
      "type": "string"
    },
    "escalated": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "resolved",
        "escalated"
      ],
      "default": "active"
    }
  },
  "required": [
    "session_id"
  ]
}